{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020",
			"ES2021.WeakRef",
			"ES2022.RegExp"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"diagnostics": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}