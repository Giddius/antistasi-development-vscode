{
    "name": "antistasi-development",
    "publisher": "Giddi",
    "displayName": "Antistasi Development",
    "description": "Utility to help Antistasi Devs",
    "author": {
        "name": "Giddi"
    },
    "license": "MIT",
    "icon": "images/antistasi_development_icon.png",
    "repository": {
        "type": "github",
        "url": "https://github.com/Giddius/antistasi-development-vscode"
    },
    "homepage": "https://github.com/Giddius/antistasi-development-vscode/blob/main/README.md",
    "version": "0.4.2",
    "engines": {
        "vscode": "^1.83.0"
    },
    "enableTelemetry": false,
    "categories": [
        "Snippets",
        "Other"
    ],
    "keywords": [
        "Antistasi",
        "sqf",
        "Arma"
    ],
    "preview": true,
    "extensionKind": [
        "workspace"
    ],
    "extensionDependencies": [],
    "pricing": "Free",
    "activationEvents": [
        "workspaceContains:**/[Ss][Tt][Rr][Ii][Nn][Gg][Tt][Aa][Bb][Ll][Ee].[Xx][Mm][Ll]",
        "workspaceContains:**/*.[Ss][Qq][Ff]",
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "submenus": [
            {
                "id": "antistasiDevelopment.stringtable_menu",
                "label": "Antistasi Development: Stringtable"
            }
        ],
        "commands": [
            {
                "command": "antistasi.insert-stringtable-key",
                "title": "insert new stringtable key",
                "category": "Antistasi-Development-Stringtable",
                "shortTitle": "insert"
            },
            {
                "command": "antistasi.convert-to-stringtable-key",
                "title": "convert to stringtable key",
                "category": "Antistasi-Development-Stringtable",
                "shortTitle": "convert"
            },
            {
                "command": "antistasi.scan-for-all-undefined-stringtable-keys",
                "title": "scan for all undefined stringtable keys",
                "category": "Antistasi-Development-Stringtable",
                "shortTitle": "scan undefined stringtable keys"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "submenu": "antistasiDevelopment.stringtable_menu",
                    "group": "stringtable"
                }
            ],
            "antistasiDevelopment.stringtable_menu": [
                {
                    "command": "antistasi.convert-to-stringtable-key",
                    "when": "(resourceScheme == file && resourceExtname in antistasiDevelopment.supportedFileextensions)&&(editorTextFocus)&&(!editorReadonly)",
                    "group": "stringtable"
                }
            ]
        },
        "configurationDefaults": {
            "xml.format.maxLineWidth": 0
        },
        "snippets": [
            {
                "language": "sqf",
                "path": "./src/snippets/sqf.json"
            }
        ],
        "configuration": [
            {
                "title": "Antistasi Development",
                "properties": {
                    "antistasiDevelopment.stringtable_data.enable": {
                        "type": "boolean",
                        "default": true,
                        "scope": "window",
                        "description": "Enable all stringtable related functionality"
                    },
                    "antistasiDevelopment.stringtable_data.enableHover": {
                        "type": "boolean",
                        "default": true,
                        "scope": "window",
                        "description": "Enable Preview of the english text when hovering over a stringtable key."
                    },
                    "antistasiDevelopment.stringtable_data.enableDefinition": {
                        "type": "boolean",
                        "default": true,
                        "scope": "window",
                        "description": "Enable getting the definition of a stringtable key."
                    },
                    "antistasiDevelopment.stringtable_data.enableUndefinedKeysProblems": {
                        "type": "boolean",
                        "default": true,
                        "scope": "window",
                        "description": "Enable automatic marking of undefined Stringtable Keys as problems in `sqf`/`ext`/`cpp`/`hpp` files."
                    },
                    "antistasiDevelopment.stringtable_data.undefinedKeysToIgnore": {
                        "type": "array",
                        "default": [],
                        "scope": "window",
                        "description": "Stringtable key names that should never be marked as problems even if they are undefined."
                    },
                    "antistasiDevelopment.stringtable_data.extraFileNameExtensions": {
                        "type": "array",
                        "default": [],
                        "scope": "window",
                        "markdownDescription": "Extra file extensions where the functionality of `stringtable_data` should be applied to(each entry has to include the dot, ie: `.rst` or `.py`).\n**REQUIRES RESTART**",
                        "pattern": "\\.[a-zA-Z\\d]+"
                    }
                }
            }
        ]
    },
    "scripts": {
        "precompile": "node ./tools/setup_compile.js ./",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "publish": "mkdirp \"./dist/\" && vsce package -o \"./dist/\"",
        "publish_prerelease": "vsce package --pre-release"
    },
    "devDependencies": {
        "@types/async-lock": "^1.4.2",
        "@types/fs-extra": "^11.0.4",
        "@types/mocha": "^10.0.2",
        "@types/node": "18.x",
        "@types/sqlite3": "^3.1.11",
        "@types/vscode": "^1.83.0",
        "@types/xml2js": "^0.4.14",
        "@typescript-eslint/eslint-plugin": "^6.18.1",
        "@typescript-eslint/parser": "^6.18.1",
        "@vscode/test-electron": "^2.3.4",
        "@vscode/vsce": "^2.23.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "glob": "^10.3.3",
        "minimatch": "^9.0.3",
        "mocha": "^10.2.0",
        "mocha-explorer-launcher-scripts": "^0.4.0",
        "prettier": "^3.2.1",
        "typescript": "^5.3.3",
        "mkdirp": "^3.0.1"
    },
    "dependencies": {
        "async-lock": "^1.4.1",
        "fs-extra": "^11.2.0",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.7",
        "xml2js": "^0.6.2"
    },
    "imports": {
        "#utilities": "./out/utilities.js"
    }
}